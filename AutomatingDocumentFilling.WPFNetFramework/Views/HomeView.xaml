<UserControl
    x:Class="AutomatingDocumentFilling.WPFNetFramework.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="3550"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid Background="White" Grid.IsSharedSizeScope="True">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock" />
            <Style TargetType="CheckBox">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Введите текущей год: " />
            <toolkit:MaskedTextBox
                Grid.Column="1"
                Width="45"
                Height="25"
                Padding="0,0,0,3"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Bottom"
                FontSize="16"
                Mask="0000"
                Text="{Binding CurrentYear, Mode=TwoWay}" />
        </Grid>

        <CheckBox
            Grid.Row="1"
            Margin="10"
            VerticalContentAlignment="Center"
            Content="Профессия/специальность ТОП-50?"
            IsChecked="{Binding IsTopFifty}" />

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Выберите код учебной дисциплины: " />
            <ComboBox
                Grid.Column="1"
                ItemsSource="{Binding CodesNameOfAcademicDiscipline, Mode=TwoWay}"
                SelectedItem="{Binding CodesNameOfAcademicDiscipline[0]}"
                SelectedValue="{Binding CodeOfAcademicDiscipline, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Выберите специальность: " />

            <ComboBox
                Grid.Column="1"
                Margin="10,0,0,0"
                GotFocus="ComboBox_GotFocus"
                IsEditable="True"
                IsTextSearchEnabled="False"
                ItemsSource="{Binding SpecialtiesView, Mode=TwoWay}"
                SelectedItem="{Binding Specialty, Mode=TwoWay}"
                StaysOpenOnEdit="True"
                Text="{Binding SearchText}" />
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Выберите форму обучения: " />
            <ComboBox
                Grid.Column="1"
                ItemsSource="{Binding FormsOfEducation, Mode=TwoWay}"
                SelectedItem="{Binding FormsOfEducation[0]}"
                SelectedValue="{Binding FormOfEducation, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Выберите цикл: " />
            <ComboBox
                Grid.Column="1"
                ItemsSource="{Binding Cycles, Mode=TwoWay}"
                SelectedItem="{Binding Cycles[0]}"
                SelectedValue="{Binding Cycle, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" SharedSizeGroup="Label" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите ФИО Заместителя директора по учебной работе, заместитель председателя методического совета: "
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding FullNameOfDeputyDirectorAcademicAffairs, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Введите ФИО Заместителя директора по учебной методической работе, председатель методического совета:"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding FullNameOfDeputyDirectorAcademicMethodologicalWork, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Введите ФИО Председателя методической цикловой комиссии: "
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding FullNameOfChairmanOfMethodologicalCyclicCommission, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите ФИО и должность через запятую составителя:"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Left"
                Text="{Binding CompletedBy, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Width="400"
                Margin="10,-10,0,0"
                Style="{StaticResource HintTextBlock}"
                Text="ФИО преподавателя ГБПОУ МО «Люберецкий техникум имени  Героя Советского Союза, лётчика–космонавта Ю.А. Гагарина»"
                TextWrapping="Wrap" />
        </Grid>

        <CheckBox
            Name="WereThereExperts"
            Grid.Row="8"
            Margin="10"
            VerticalContentAlignment="Center"
            Content="Были ли эксперты?" />

        <Grid Grid.Row="9" Visibility="{Binding ElementName=WereThereExperts, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите ФИО и должность технического эксперта через запятую:"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Left"
                Text="{Binding TechExpertFio, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Width="400"
                Margin="10,-10,0,0"
                Style="{StaticResource HintTextBlock}"
                Text="ФИО методиста, члена методического совета ГБПОУ МО «Люберецкий техникум имени  Героя Советского Союза, лётчика–космонавта Ю.А. Гагарина»"
                TextWrapping="Wrap" />
        </Grid>

        <Grid Grid.Row="10" Visibility="{Binding ElementName=WereThereExperts, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите ФИО и должность эксперта по содержанию через запятую:"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Left"
                Text="{Binding ContentExpertFio, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Width="400"
                Margin="10,-10,0,0"
                Style="{StaticResource HintTextBlock}"
                Text="ФИО преподавателя высшей квалификационной  категории ГБПОУ МО «Люберецкий техникум имени Героя Советского Союза, лётчика-космонавта Ю.А. Гагарина»"
                TextWrapping="Wrap" />
        </Grid>

        <Grid Grid.Row="11" Visibility="{Binding ElementName=WereThereExperts, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="Введите ФИО и должность внешнего эксперта через запятую:"
                TextWrapping="Wrap" />
            <TextBox Grid.Column="1" Text="{Binding OutsideExpertFio, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="Введите название приказа, например: 22.04.2014 № 383 (зарегистрировано в Минюсте России 26.12.2016 № 44946)."
                TextWrapping="Wrap" />

            <TextBox Grid.Column="1" Text="{Binding Order, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="13">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="Выберите место дисциплины в структуре основной профессиональной образовательной программы"
                TextWrapping="Wrap" />

            <ComboBox
                Grid.Column="1"
                ItemsSource="{Binding PlacesOfDisciplineInStructure}"
                SelectedItem="{Binding PlacesOfDisciplineInStructure[0]}"
                SelectedValue="{Binding PlaceOfDisciplineInStructure, Mode=TwoWay}" />
        </Grid>

        <Grid Grid.Row="14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Выберите умения: " />

            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding Skills, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ComboBox
                                    Grid.Row="0"
                                    Margin="0,5,0,0"
                                    GotFocus="ComboBox_GotFocus"
                                    IsEditable="True"
                                    IsTextSearchEnabled="False"
                                    ItemsSource="{Binding Skills}"
                                    SelectedItem="{Binding SelectedText, Mode=TwoWay}"
                                    StaysOpenOnEdit="True"
                                    Text="{Binding SearchText}" />
                                <Grid Grid.Row="1" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        FontSize="14"
                                        Text="Критерий оценки: " />
                                    <toolkit:RichTextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="14"
                                        Text="{Binding Appraisal}">
                                        <toolkit:RichTextBox.TextFormatter>
                                            <toolkit:PlainTextFormatter />
                                        </toolkit:RichTextBox.TextFormatter>
                                    </toolkit:RichTextBox>
                                </Grid>
                                <Grid Grid.Row="2" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        FontSize="14"
                                        Text="Форма и метод оценки: " />
                                    <toolkit:RichTextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="14"
                                        Text="{Binding AssessmentForm}">
                                        <toolkit:RichTextBox.TextFormatter>
                                            <toolkit:PlainTextFormatter />
                                        </toolkit:RichTextBox.TextFormatter>
                                    </toolkit:RichTextBox>
                                </Grid>
                            </Grid>
                            <Button
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Command="{Binding AddNewSkillCommand}"
                Content="Добавить новое умение" />
        </Grid>

        <Grid Grid.Row="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Выберите знания: " />

            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding Knowledges, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <ComboBox
                                    Grid.Row="0"
                                    Margin="0,5,0,0"
                                    GotFocus="ComboBox_GotFocus"
                                    IsEditable="True"
                                    IsTextSearchEnabled="False"
                                    ItemsSource="{Binding Knowledges}"
                                    SelectedItem="{Binding SelectedText, Mode=TwoWay}"
                                    StaysOpenOnEdit="True"
                                    Text="{Binding SearchText}" />

                                <Grid Grid.Row="1" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        FontSize="14"
                                        Text="Критерий оценки: " />
                                    <toolkit:RichTextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="14"
                                        Text="{Binding Appraisal}">
                                        <toolkit:RichTextBox.TextFormatter>
                                            <toolkit:PlainTextFormatter />
                                        </toolkit:RichTextBox.TextFormatter>
                                    </toolkit:RichTextBox>
                                </Grid>
                                <Grid Grid.Row="2" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        FontSize="14"
                                        Text="Форма и метод оценки: " />
                                    <toolkit:RichTextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="14"
                                        Text="{Binding AssessmentForm}">
                                        <toolkit:RichTextBox.TextFormatter>
                                            <toolkit:PlainTextFormatter />
                                        </toolkit:RichTextBox.TextFormatter>
                                    </toolkit:RichTextBox>
                                </Grid>
                            </Grid>
                            <Button
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Command="{Binding AddNewKnowledgeCommand}"
                Content="Добавить новое знание" />
        </Grid>

        <Grid Grid.Row="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Выберите общие компетенции: "
                TextWrapping="Wrap" />

            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding GeneralCompetences, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox
                                Grid.Row="0"
                                Margin="0,5,0,0"
                                GotFocus="ComboBox_GotFocus"
                                IsEditable="True"
                                IsTextSearchEnabled="False"
                                ItemsSource="{Binding GeneralCompetences}"
                                SelectedItem="{Binding SelectedText, Mode=TwoWay}"
                                StaysOpenOnEdit="True"
                                Text="{Binding SearchText}" />
                            <Button
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Command="{Binding AddNewGeneralCompetenceCommand}"
                Content="Добавить новую общую компетенцию" />
        </Grid>

        <Separator Grid.Row="17" Margin="10" />

        <Grid Grid.Row="18" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="35" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Выберите профессиональные компетенции: "
                TextWrapping="Wrap" />

            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding ProfessionalCompetences, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <ComboBox
                                Grid.Row="0"
                                Margin="0,5,0,0"
                                GotFocus="ComboBox_GotFocus"
                                IsEditable="True"
                                IsTextSearchEnabled="False"
                                ItemsSource="{Binding ProfessionalCompetences}"
                                SelectedItem="{Binding SelectedText, Mode=TwoWay}"
                                StaysOpenOnEdit="True"
                                Text="{Binding SearchText}" />
                            <Button
                                Grid.Column="1"
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Command="{Binding AddNewProfessionalCompetenceCommand}"
                Content="Добавить новую профессиональную компетенцию" />
        </Grid>

        <Separator Grid.Row="19" Margin="10" />

        <Grid Grid.Row="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Height="40"
                VerticalAlignment="Bottom"
                Command="{Binding AddNewSectionCommand}"
                Content="Добавить новый раздел" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding Sections, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Margin="0,10"
                                Padding="10"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,0,25"
                                        FontSize="16"
                                        Text="Название раздела: " />
                                    <toolkit:RichTextBox
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Width="150"
                                        Height="25"
                                        Margin="140,0,0,25"
                                        HorizontalAlignment="Left"
                                        FontSize="16"
