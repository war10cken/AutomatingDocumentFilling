                                                Width="150"
                                                FontSize="16"
                                                Text="{Binding Name}">
                                                <toolkit:RichTextBox.TextFormatter>
                                                    <toolkit:PlainTextFormatter />
                                                </toolkit:RichTextBox.TextFormatter>
                                            </toolkit:RichTextBox>
                                        </Grid>
                                        <Button
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            Command="{Binding DeleteCommand}"
                                            Style="{StaticResource ButtonWithCross}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Separator Grid.Row="25" Margin="10" />

        <Grid Grid.Row="26">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" SharedSizeGroup="Label" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Суммарная учебная нагрузка во взаимодействии с преподавателем (объём часов):"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding TotalTeachingLoadHours, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Самостоятельная работа (объём часов):"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding IndependentWorkHours, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Объем образовательной программы (объём часов):"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding VolumeOfEducationalProgramHours, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Теоретическое обучение (объём часов):"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding TheoreticalTeachingHours, Mode=TwoWay}" />
            <CheckBox
                Name="IsLab"
                Grid.Row="4"
                Grid.Column="0"
                Margin="5,10,0,0"
                VerticalContentAlignment="Center"
                Content="Были ли лабораторные работы?" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="Лабораторные работы (объём часов):"
                TextWrapping="Wrap"
                Visibility="{Binding ElementName=IsLab, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding LaboratoryWorksHours, Mode=TwoWay}"
                Visibility="{Binding ElementName=IsLab, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <CheckBox
                Name="IsPrac"
                Grid.Row="6"
                Grid.Column="0"
                Margin="5,10,0,0"
                VerticalContentAlignment="Center"
                Content="Были ли практические занятия?" />
            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                Text="Практические занятия (объём часов):"
                TextWrapping="Wrap"
                Visibility="{Binding ElementName=IsPrac, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Grid.Row="7"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding PracticalLessonsHours, Mode=TwoWay}"
                Visibility="{Binding ElementName=IsPrac, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <CheckBox
                Name="IsCurs"
                Grid.Row="8"
                Grid.Column="0"
                Margin="5,10,0,0"
                VerticalContentAlignment="Center"
                Content="Была ли курсовая работа?" />
            <TextBlock
                Grid.Row="9"
                Grid.Column="0"
                Text="Курсовая работа (объём часов):"
                TextWrapping="Wrap"
                Visibility="{Binding ElementName=IsCurs, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBox
                Grid.Row="9"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding CourseWorkHoursWithCondition, Mode=TwoWay}"
                Visibility="{Binding ElementName=IsCurs, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <TextBlock
                Grid.Row="10"
                Grid.Column="0"
                Text="Контрольная работа (объём часов):"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="10"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding TestHours, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="11"
                Grid.Column="0"
                Text="Консультации (объём часов):"
                TextWrapping="Wrap" />
            <TextBox
                Grid.Row="11"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding ConsultingHours, Mode=TwoWay}" />

            <Button
                Grid.Row="12"
                Grid.Column="0"
                Width="160"
                Margin="5"
                VerticalAlignment="Bottom"
                Command="{Binding AddNewIndependentWorkCommand}"
                Content="Добавить самостоятельную работу" />
            <ItemsControl
                Grid.Row="12"
                Grid.Column="1"
                Margin="0,5,0,0"
                ItemsSource="{Binding IndependentWorks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,0,5"
                                    FontSize="16"
                                    Text="Название самостоятельной работы:" />
                                <toolkit:RichTextBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="150"
                                    Margin="10,0,0,5"
                                    FontSize="16"
                                    Text="{Binding WorkName, Mode=TwoWay}">
                                    <toolkit:RichTextBox.TextFormatter>
                                        <toolkit:PlainTextFormatter />
                                    </toolkit:RichTextBox.TextFormatter>
                                </toolkit:RichTextBox>
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,0,5"
                                    FontSize="16"
                                    Text="Объём часов:" />
                                <TextBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="40"
                                    Margin="0,0,0,5"
                                    FontSize="16"
                                    PreviewTextInput="NumberValidation"
                                    Text="{Binding Hours, Mode=TwoWay}" />
                            </Grid>
                            <Button
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Command="{Binding DeleteCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Grid.Row="27">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Выберите форму аттестации: " />
            <ComboBox
                Grid.Row="0"
                Grid.Column="1"
                FontSize="14"
                ItemsSource="{Binding SecondCertificationForms}"
                SelectedItem="{Binding SecondCertificationForm, Mode=TwoWay}"
                SelectedValue="{Binding SecondCertificationForms[0]}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Введите количество часов:" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Width="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding SecondCertificationFormHours, Mode=TwoWay}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Введите количество часов консультации: " />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Width="50"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                PreviewTextInput="NumberValidation"
                Text="{Binding SecondConsultationHours, Mode=TwoWay}" />
        </Grid>

        <Separator Grid.Row="28" Margin="10" />

        <CheckBox
            Name="IsAdditionalResources"
            Grid.Row="29"
            Margin="15"
            Content="Использовались дополнительные источники?" />
        <CheckBox
            Name="IsInternetResources"
            Grid.Row="30"
            Margin="15"
            Content="Использовались интернет-источники?" />

        <Grid Grid.Row="31">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите основные источники, которые вы использовали" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding MainResources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <toolkit:RichTextBox
                                Name="Box"
                                Grid.Column="0"
                                Margin="10"
                                FontSize="16"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter />
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <Button
                                Grid.Column="1"
                                Width="25"
                                Height="25"
                                Command="{Binding DeleteResourceCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding AddNewResource}"
                Content="Добавить новый источник" />
        </Grid>

        <Grid Grid.Row="32" Visibility="{Binding ElementName=IsAdditionalResources, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите дополнительные источники, которые вы использовали" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding AdditionalResources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <toolkit:RichTextBox
                                Name="Box"
                                Grid.Column="0"
                                Margin="10"
                                FontSize="16"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter />
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <Button
                                Grid.Column="1"
                                Width="25"
                                Height="25"
                                Command="{Binding DeleteResourceCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding AddNewAdditionalResource}"
                Content="Добавить новый источник" />
        </Grid>

        <Grid Grid.Row="33" Visibility="{Binding ElementName=IsInternetResources, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите интернет-источники, которые вы использовали" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding InternetResources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <toolkit:RichTextBox
                                Name="Box"
                                Grid.Column="0"
                                Margin="10"
                                FontSize="16"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter />
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <Button
                                Grid.Column="1"
                                Command="{Binding DeleteResourceCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding AddNewInternetResource}"
                Content="Добавить новый источник" />
        </Grid>

        <Grid Grid.Row="35" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="550" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="Требования к квалификации педагогических кадров, обеспечивающих обучение по учебной дисциплине:"
                TextWrapping="Wrap" />
            <ComboBox
                Grid.Column="1"
                FontSize="14"
                ItemsSource="{Binding QualificationNames}"
                SelectedItem="{Binding QualificationName, Mode=TwoWay}"
                SelectedValue="{Binding QualificationNames[0]}" />
        </Grid>

        <Grid Grid.Row="37" Margin="500,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,10,0,0"
                Command="{Binding ShowWindowCommand}"
                Content="Предпросмотр"
                Visibility="{Binding IsSaved, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"
                Content="Сохранить" />
        </Grid>
    </Grid>
</UserControl>