                      Margin="15"
                      Name="IsPrac"/>
            <TextBlock Grid.Row="7"
                       Grid.Column="0"
                       Visibility="{Binding ElementName=IsPrac, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Text="Практические занятия (объём часов):"
                       TextWrapping="Wrap"
                       Width="170"/>
            <TextBox Grid.Row="7"
                     Grid.Column="1"
                     Text="{Binding PracticalLessonsHours}"
                     Visibility="{Binding ElementName=IsPrac, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Width="50"
                     VerticalContentAlignment="Center"/>
            <CheckBox Grid.Row="8"
                      Grid.Column="0"
                      Content="Была ли курсовая работа?"
                      VerticalContentAlignment="Center"
                      Margin="15"
                      Name="IsCurs"/>
            <TextBlock Grid.Row="9"
                       Grid.Column="0"
                       Visibility="{Binding ElementName=IsCurs, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Text="Курсовая работа (объём часов):"
                       TextWrapping="Wrap"
                       Width="170"/>
            <TextBox Grid.Row="9"
                     Grid.Column="1"
                     Text="{Binding CourseWorkHoursWithCondition}"
                     Visibility="{Binding ElementName=IsCurs, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Width="50"
                     VerticalContentAlignment="Center"/>
            <TextBlock Grid.Row="10"
                       Grid.Column="0"
                       Text="Контрольная работа (объём часов):"
                       TextWrapping="Wrap"
                       Width="170"/>
            <TextBox Grid.Row="10"
                     Grid.Column="1"
                     Width="50"
                     Text="{Binding TestHours}"
                     VerticalContentAlignment="Center"/>
            <TextBlock Grid.Row="11"
                       Grid.Column="0"
                       Text="Консультации (объём часов):"
                       TextWrapping="Wrap"
                       Width="170"/>
            <TextBox Grid.Row="11"
                     Grid.Column="1"
                     Text="{Binding ConsultingHours}"
                     Width="50"
                     VerticalContentAlignment="Center"/>
            <Button Grid.Row="12"
                    Grid.Column="0"
                    Margin="5"
                    Command="{Binding AddNewIndependentWorkCommand}"
                    Content="Добавить самостоятельную работу"
                    VerticalAlignment="Bottom"
                    Width="160"/>
            <ItemsControl Grid.Row="12"
                          Grid.Column="1"
                          ItemsSource="{Binding IndependentWork}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                       Margin="0 0 0 5"
                                       Grid.Column="0"
                                       FontSize="16"
                                       Text="Название самостоятельной работы:"/>
                            <toolkit:RichTextBox Grid.Row="0"
                                                 Grid.Column="1"
                                                 Width="150"
                                                 FontSize="16"
                                                 Margin="0 0 0 5"
                                                 Text="{Binding WorkName}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter/>
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <TextBlock Grid.Row="1"
                                       Margin="0 0 0 5"
                                       Grid.Column="0"
                                       FontSize="16"
                                       Text="Объём часов:"/>
                            <TextBox Grid.Row="1"
                                     Margin="0 0 0 5"
                                     Grid.Column="1"
                                     FontSize="16"
                                     Width="40"
                                     Text="{Binding Hours}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            
        </Grid>
        <Separator Grid.Row="25" Margin="10" />
        <CheckBox
            Name="IsAdditionalResources"
            Grid.Row="26"
            Margin="15"
            Content="Использовались дополнительные источники?" />
        <CheckBox
            Name="IsInternetResources"
            Grid.Row="27"
            Margin="15"
            Content="Использовались интернет-источники?" />

        <Grid Grid.Row="28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите основные источники, которые вы использовали" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding MainResources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <toolkit:RichTextBox
                                Name="Box"
                                Grid.Column="0"
                                Margin="10"
                                FontSize="16"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter />
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <Button
                                Grid.Column="1"
                                Width="25"
                                Height="25"
                                Command="{Binding DeleteResourceCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding AddNewResource}"
                Content="Добавить новый источник" />
        </Grid>

        <Grid Grid.Row="29" Visibility="{Binding ElementName=IsAdditionalResources, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите дополнительные источники, которые вы использовали" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding AdditionalResources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <toolkit:RichTextBox
                                Name="Box"
                                Grid.Column="0"
                                Margin="10"
                                FontSize="16"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter />
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <Button
                                Grid.Column="1"
                                Width="25"
                                Height="25"
                                Command="{Binding DeleteResourceCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding AddNewAdditionalResource}"
                Content="Добавить новый источник" />
        </Grid>

        <Grid Grid.Row="30" Visibility="{Binding ElementName=IsInternetResources, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="Label" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Введите интернет-источники, которые вы использовали" />
            <ItemsControl
                Grid.Row="0"
                Grid.Column="1"
                ItemsSource="{Binding InternetResources, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="45" />
                            </Grid.ColumnDefinitions>

                            <toolkit:RichTextBox
                                Name="Box"
                                Grid.Column="0"
                                Margin="10"
                                FontSize="16"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                <toolkit:RichTextBox.TextFormatter>
                                    <toolkit:PlainTextFormatter />
                                </toolkit:RichTextBox.TextFormatter>
                            </toolkit:RichTextBox>
                            <Button
                                Grid.Column="1"
                                Command="{Binding DeleteResourceCommand}"
                                Style="{StaticResource ButtonWithCross}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                Command="{Binding AddNewInternetResource}"
                Content="Добавить новый источник" />
        </Grid>

        <Button
            Grid.Row="36"
            Margin="0,10,0,0"
            Command="{Binding ShowWindowCommand}"
            Content="Предпросмотр"
            Visibility="{Binding IsSaved, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Button
            Grid.Row="37"
            Margin="0,10,0,0"
            Command="{Binding SaveCommand}"
            Content="Сохранить" />
    </Grid>
</UserControl>