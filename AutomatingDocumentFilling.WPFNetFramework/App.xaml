<Application
    x:Class="AutomatingDocumentFilling.WPFNetFramework.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AutomatingDocumentFilling.WPFNetFramework"
    xmlns:views="clr-namespace:AutomatingDocumentFilling.WPFNetFramework.Views"
    xmlns:vm="clr-namespace:AutomatingDocumentFilling.WPFNetFramework.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>